{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "nx",
  "buildCommand": "yarn build:all",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "packages/twenty-server/api/$1.ts"
    },
    {
      "source": "/(.*)",
      "destination": "packages/twenty-front/dist/index.html"
    }
  ],
  "functions": {
    "packages/twenty-server/api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 1769,
      "maxDuration": 10
    }
  },
  "cleanUrls": true
}