{
  "version": 2,
  "builds": [
    {
      "src": "packages/twenty-front/package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd ../.. && yarn && cd packages/twenty-front && yarn build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "packages/twenty-server/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd ../.. && yarn && cd packages/twenty-server && yarn build",
        "installCommand": "yarn install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/twenty-server/src/main.ts"
    },
    {
      "src": "/graphql",
      "dest": "packages/twenty-server/src/main.ts"
    },
    {
      "src": "/rest/(.*)",
      "dest": "packages/twenty-server/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/twenty-front/dist/index.html"
    }
  ],
  "env": {
    "IS_SERVERLESS": "true",
    "SQLITE_DISABLED": "true"
  },
  "rootDirectory": "packages/twenty-front"
}