{
  "version": 2,
  "builds": [
    {
      "src": "packages/twenty-front/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "packages/twenty-server/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/twenty-server/api/$1.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/twenty-front/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "packages/twenty-front/dist/index.html"
    }
  ],
  "cleanUrls": true
}