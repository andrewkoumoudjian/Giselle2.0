{
  "version": 2,
  "buildCommand": "yarn build",
  "outputDirectory": "packages/twenty-front/dist",
  "installCommand": "yarn install",
  "framework": "vite",
  "devCommand": "yarn dev",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/twenty-front/dist",
        "buildCommand": "yarn workspace twenty-shared build && yarn workspace twenty-ui build && yarn workspace twenty-front build"
      }
    },
    {
      "src": "packages/twenty-server/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "packages/twenty-server/api/$1.ts"
    },
    {
      "source": "/(.*)",
      "destination": "packages/twenty-front/dist/index.html"
    }
  ],
  "env": {
    "IS_SERVERLESS": "true",
    "SQLITE_DISABLED": "true",
    "PG_DATABASE_URL": "${POSTGRES_URL}",
    "POSTGRES_URL": "${POSTGRES_URL}",
    "POSTGRES_HOST": "${POSTGRES_HOST}",
    "POSTGRES_USER": "${POSTGRES_USER}",
    "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}",
    "POSTGRES_DATABASE": "${POSTGRES_DATABASE}",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "${NEXT_PUBLIC_SUPABASE_ANON_KEY}",
    "SUPABASE_ANON_KEY": "${SUPABASE_ANON_KEY}",
    "SUPABASE_SERVICE_ROLE_KEY": "${SUPABASE_SERVICE_ROLE_KEY}",
    "JWT_SECRET": "${JWT_SECRET}",
    "REDIS_URL": "${REDIS_URL}"
  }
}