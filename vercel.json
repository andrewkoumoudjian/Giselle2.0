{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "packages/twenty-front/build",
        "buildCommand": "npx nx build twenty-shared && npx nx build twenty-front"
      }
    },
    {
      "src": "packages/twenty-server/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/twenty-server/api/$1.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/twenty-front/build/index.html"
    }
  ],
  "env": {
    "IS_SERVERLESS": "true",
    "SQLITE_DISABLED": "true",
    "PG_DATABASE_URL": "@DATABASE_URL",
    "POSTGRES_URL": "@POSTGRES_URL",
    "REDIS_URL": "@REDIS_URL",
    "JWT_SECRET": "@JWT_SECRET"
  }
}