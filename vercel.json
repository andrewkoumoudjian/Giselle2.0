{
  "buildCommand": "NODE_OPTIONS=\"--max-old-space-size=6144\" VERCEL_FORCE_NO_BUILD_CACHE=1 npm run build",
  "outputDirectory": "packages/twenty-front/dist",
  "env": {
    "VITE_DISABLE_TYPESCRIPT_CHECKER": "true",
    "VITE_DISABLE_ESLINT_CHECKER": "true",
    "TURBO_TELEMETRY_DISABLED": "1"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}