{
  "version": 2,
  "buildCommand": "NODE_OPTIONS=\"--max-old-space-size=6144\" VERCEL_FORCE_NO_BUILD_CACHE=1 yarn vercel-build",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "VITE_DISABLE_TYPESCRIPT_CHECKER": "true",
    "VITE_DISABLE_ESLINT_CHECKER": "true",
    "TURBO_TELEMETRY_DISABLED": "1"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/graphql",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}