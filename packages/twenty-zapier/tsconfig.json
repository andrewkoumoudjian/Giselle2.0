{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["es2015"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["lib", "node_modules", "**/*.test.ts"]
}
